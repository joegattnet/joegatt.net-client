@media only screen and (min-width: 1366px)
  $column-width = 15px
  $gutter-width = 28px
  #main ol.breadcrumb,
  #main nav.pagination,
  footer nav,
  footer small,
  #tags,
  #versions,
  aside.statistics,
  .books-show .details
    // suffix(6)
    column(24/36, offset: 6/36)
    clear: both
  #disqus_thread,
  #comments,
  ul.user,
  .registrations-new form, .registrations-edit form,
  .sessions-new form, .passwords-new form, .confirmations-new form
    suffix(15)
    column(15/36, offset: 6/36)
    clear: both
  // #comments > aside > ol > li
  //   counter-increment: comments 1
  //   &:before
  //     +code-font
  //     color: $off-color
  //     content: counter(comments)
  //     display: block
  //     font-size: $small-font-size
  //     line-height: $line-height
  //     padding-right: $text-indent
  //     position: absolute
  //     text-align: right
  //     width: $text-indent * 2
  header.main
    column(24/36, offset: 6/36)
    clear: both
  .citations
    suffix(6)
    column(24/36, offset: 6/36)
    blockquote
      suffix(12, 24)
      column(12/24)
  .links,
    suffix(18)
    column(12/36, offset: 6/36)
  .books, .tags-index .tags
    suffix(6)
    column(24/36, offset: 6/36)
  .home-index
    .notes
      suffix(6)
      column(24/36, offset: 6/36)
      padding-right: 0
      ul
        css-columns($promotions-home-columns, $text-indent)
        margin-bottom: 0
        li
          blurb($promotions-home-lines)
          margin-bottom: $line-height
  .colophon-index
    .palette
      margin-bottom: $line-height
      ul
        horizontal-list()
        li
          code-font()
          padding-top: ($line-height * 2)
    .gems, .palette
      suffix(6)
      column(24/36, offset: 6/36)
  .books-index, .colophon-index .gems
    ul
      css-columns(2)
  .tags-index
    ul
      css-columns(6)
  .citations-show
    figure.citation
      suffix(6)
      column(24/36, offset: 6/36)
      blockquote
        suffix(12, 24)
        column(12/24)
  .settings-edit
    form
      suffix(6)
      column(24/36, offset: 6/36)
  article
    section#content
      column(36/36)
      figure
        &.image
          suffix(15)
          column(15/36, offset: 6/36)
      #introduction
        column(18/36, offset: 6/36)
      #text
        overflow: visible
        aside
          column(12/36, offset: 6/36)
        .side-annotations
          column(9/18, offset: 18/18)
          height: 0
          margin-top: 0
        &.regular, &.parallel
          column(12/36, offset: 6/36)
        &.enface
          column(30/36, offset: 6/36)
          p
            line-height: $line-height
            &:before
              top: 0
          .source, p.source
            column(12/30)
            color: $body-font-color
            p
              color: $body-font-color
          .target, p.target
            column(12/30, offset: 12/30)
            padding-top: 0
          .side-annotations
            column(6/30, offset: 24/30)
          div
            overflow: hidden
      #map
        span-columns(27, offset: 6/36)
    #extra
      span-columns(9 omega, 36)
  .fade-annotations
    .side-annotations
      fade(0)
    &:hover
      .side-annotations
        fade(1)
  .ins-section #text .body
    margin-bottom: $line-height
    p
      margin: $line-height/3 0
      text-indent: 0
  .notes
    suffix(15)
    column(15/36, offset: 6/36)
    li
      blurb(5, 9, 36)
      img, iframe
        width: space(6) auto
        height: $line-height * 5
  .share
    display: inline-block
    margin-bottom: $line-height/2
  #admin
    ul
      bottom: $line-height * 2
      padding-left: $text-indent
      position: fixed
  figure.image
    img
      height: 390px
      width: 690px
  #tools
    background-color: transparent
    border: none
    padding-left: $text-indent/2
    width: space(6)
  footer
    margin-bottom: 0
    small
      margin-bottom: 0
  iframe
    column(18/36)
  form
    span-columns(18)
    label
      input
        left: space(12)
        padding: 1px 0
        position: absolute
        width: space(6)
